-- Staging model: clean and standardize raw orders data
with source as (
    select * from raw_data.orders
),

cleaned as (
    select
        order_id,
        customer_id,
        order_date,
        order_amount,
        order_status,
        -- Add some transformations
        case 
            when order_status = 'completed' then true
            else false
        end as is_completed
    from source
)

select * from cleaned